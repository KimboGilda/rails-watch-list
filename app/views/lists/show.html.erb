<div class="movie-category w-30 m-4">
  <h2><%= @list.name.capitalize %></h2>
  <div class="movie-info">
    <% @bookmarks.each do |bookmark| %>
      <img src="<%= bookmark.movie.poster_url %>" alt="" class="movie-poster">
      <div class="movie-details">
        <div class="movie-title">
          <i class="fa-solid fa-film"></i> <%= bookmark.movie.title%>
        </div>
        <div class="movie-comment">
          <i class="fa-solid fa-arrow-right"></i> <%= bookmark.comment%>
        </div>
        <div class="movie-rating">
          <i class="fa-solid fa-star"></i> <%= bookmark.movie.rating %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Delete #{@list.name}", list_path(@list), class: "delete-link", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>

</div>
