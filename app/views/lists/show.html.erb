<div class="movie-category w-30 m-4">
<h2><%= @list.name.capitalize %></h2>
<% @bookmarks.each do |bookmark| %>
<i class="fa-solid fa-film"></i> <%= bookmark.movie.title%>
<i class="fa-solid fa-arrow-right"></i> <%= bookmark.comment%>
<img src="<%= bookmark.movie.poster_url %>" alt="">
<% end %>

 <%= link_to "Delete #{@list.name}", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are your sure?" } %>
</div>